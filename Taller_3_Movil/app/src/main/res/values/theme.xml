<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.notnight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/fondo_aplicacion</item>
        <item name="android:fontFamily">@font/gemunu</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="android:windowBackground">@color/fondo_aplicacion</item>
        <item name="android:navigationBarColor">@color/fondo_aplicacion</item>
        <item name="android:windowSplashscreenContent">@drawable/image_logo_small_diagonal</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/image_logo_small_diagonal</item>
        <item name="android:windowTransitionBackgroundFadeDuration">@integer/material_motion_duration_short_1</item>
    </style>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">Buscar sitio</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeErrorColor">@color/red</item>
    </style>
</resources>